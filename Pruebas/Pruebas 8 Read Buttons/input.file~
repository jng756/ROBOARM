program x;
var 
b1, b2, b3 :bool;

begin

while (true) do
{
  read(b1);
  read(b2);
  read(b3);

	if (b1==false) 
	{
	   print("Se presiono boton 1");
	}
	   while(b1==false)do
		{
		  read(b1);	
		};
	if (b2==false) 
	{
	   print("Se presiono boton 2");
	}   
	   while(b2==false) do
		{
		  read(b2);	
		};

	
	if (b3==false) 
	{
	   print("Se presiono boton 3");
	}   
	   while(b3==false) do
		{
		  read(b3);	
		};
	
};

end
